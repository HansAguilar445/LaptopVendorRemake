@model IQueryable<Laptop>
<h2>Laptops In Your Budget</h2>
@if (Model.Count() > 0)
{
    <table class="table">
        <thead>
            <tr>
                <th>Model Name</th>
                <th>Price</th>
                <th>Release Year</th>
                <th>Brand</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Laptop laptop in Model)
            {
                <tr>
                    <td>@laptop.Model</td>
                    <td>$@laptop.Price</td>
                    <td>@laptop.Year</td>
                    <td>@laptop.Brand.Name</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p><b>No laptops within your budget can be found.</b></p>
}